import math
import glfw
import gl

__c__("#include <stdio.h>");
extern "C" noemit printf(fmt: str, ...);

struct Vec3 {
    x: real;
    y: real;
    z: real;

    constructor(x: real, y: real, z: real): Vec3 {
        return Vec3{ x: x, y: y, z: z};
    }
}

print(args: ...) {
    for comptime arg in args {
        if comptime typeof(arg) is int {
            printf("%ld ", arg);
        }
        else if typeof(arg) is str {
            printf("%s ", arg);
        }
        else if typeof(arg) is real {
            printf("%f ", arg);
        }
        else if typeof(arg) is Vec3 {
            printf("(%f, %f, %f) ", arg.x, arg.y, arg.z);
        }
        else {
            static_assert(false, "Type not yet supported in print");
        }
    }
}

println(args: ...) {
    for comptime arg in args {
        print(arg);
    }
    print("\n");
}

main(): int {

    const position = Vec3(5.0, 2.0, 4.0);

    if !glfw.init() {
        return 0;
    }

    const window = glfw.createWindow({ 
        title: "Hello World!",
    });

    window.swapInterval(0);
    gl.init(glfw.getProcAddress());

    gl.viewport(0, 0, 1920, 1080);

    let oldTime = glfw.getTime();
    window.swapBuffers();

    let fps = 0.0;
    while !window.shouldClose() {
        glfw.pollEvents();

        let now = glfw.getTime();
        let elapsed = now - oldTime;
        oldTime = now;

        gl.clearColor(Color((math.sin(oldTime * 10.0) + 1.0) / 2.0, 0.1, 0.1, 1.0));
        gl.clear();

        if fps == 0.0 {
            fps = 1.0 / elapsed;
        }

        let alpha = 0.001;
        fps = fps * (1.0 - alpha) + 1.0 / elapsed * alpha;

        println("FPS:", fps);

        window.swapBuffers();
    }

    glfw.terminate();

    return 0;
}
