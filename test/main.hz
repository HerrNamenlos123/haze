struct Node {
    name: str;
    left: Node | none;
    right: Node | none;
}

makeNode(name: str) {
    return Node { name: name, left: none, right: none };
}

buildTree(arena: Arena, tree: mut Node) {
    tree.left = makeNode("Left") in arena;
    tree.right = makeNode("Right") in arena;
}

printTree(tree: Node, indent: int): void :: final {
    fmt.println("Node: {tree.name}");
    fmt.println("  left: ");
    const left = tree.left;
    const right = tree.right;
    if left {
        printTree(left, indent + 4);
    }
    fmt.println("  right: ");
    if right {
        printTree(right, indent + 4);
    }
}

