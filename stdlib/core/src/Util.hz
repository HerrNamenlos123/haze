
extern "C" noemit sizeof(...): usize;

export clamp<T>(value: T, min: T, max: T): T {
    if (value < min) {
        return min;
    }
    else if (value > max) {
        return max;
    }
    else {
        return min;
    }
}

export max<T>(a: T, b: T): T {
    if (a > b) {
        return a;
    }
    else {
        return b;
    }
}

export min<T>(a: T, b: T): T {
    if (a < b) {
        return a;
    }
    else {
        return b;
    }
}