
extern C noemit hzstd_panic(msg: ccstr, ...) :: final;

namespace sys {
    export panic(msg: ccstr) :: noreturn {
        hzstd_panic(msg);
    }
}

extern C noemit hzstd_assert(condition: bool);
extern C noemit hzstd_assert_msg(condition: bool, msg: str);

export assert(condition: bool) {
    hzstd_assert(condition);
}

export assert(condition: bool, msg: str)  {
    hzstd_assert_msg(condition, msg);
}