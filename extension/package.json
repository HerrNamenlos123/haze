{
  "name": "haze",
  "displayName": "haze",
  "description": "",
  "repository": "https://github.com/HerrNamenlos123/haze",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:haze"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "haze",
        "aliases": [
          "haze"
        ],
        "extensions": [
          ".hz"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "haze",
        "scopeName": "source.hz",
        "path": "./syntaxes/haze.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "haze"
      }
    ],
    "commands": [
      {
        "command": "haze.restartServer",
        "title": "Haze: Restart Language Server"
      }
    ]
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "build": "npx tsc && vsce package",
    "install": "npm run build && code --install-extension haze-0.0.1.vsix"
  }
}
