{
  "name": "haze",
  "version": "1.0.0",
  "description": "A WIP toy programming language, inspired by the best of TypeScript and C++",
  "main": "main.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development bun run src/main.ts",
    "perf": "npx cross-env NODE_ENV=development bun --perf run src/main.ts",
    "inspect": "npx cross-env NODE_ENV=development bun --inspect run src/main.ts",
    "build": "npx cross-env NODE_ENV=production bun build --production --compile ./src/main.ts --outfile dist/haze && bun run copylib && bun link",
    "copylib": "mkdir -p ./dist/stdlib && cp -r ./stdlib/* ./dist/stdlib",
    "generate-parser": "cd src/Parser/grammar && npx antlr4ng-cli -Dlanguage=TypeScript -visitor HazeLexer.g4 HazeParser.g4 -o autogen && cd ../../..",
    "postinstall": "bun run generate-parser",
    "test": "bun run src/all.test.ts",
    "profile": "node scripts/build.js && HAZE_EXEC_MODE=profiling node --inspect dist/bundle.js"
  },
  "bin": {
    "haze": "dist/haze"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ltd/j-toml": "^1.38.0",
    "@types/archiver": "^6.0.3",
    "@types/argparse": "^2.0.17",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/lodash": "^4.17.16",
    "@types/tar-fs": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "antlr4ng": "^3.0.16",
    "antlr4ng-cli": "^2.0.0",
    "archiver": "^7.0.1",
    "argparse": "^2.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "cross-env": "^7.0.3",
    "deep-equal": "^2.2.3",
    "eslint": "^9.39.2",
    "fast-glob": "^3.3.3",
    "gunzip-maybe": "^1.4.2",
    "open": "^11.0.0",
    "typescript-eslint": "^8.53.0",
    "vscode-languageserver": "^9.0.1",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@types/chalk": "^0.4.31",
    "@types/cli-progress": "^3.11.6",
    "@types/deep-equal": "^1.0.4",
    "@types/which": "^3.0.4",
    "esbuild": "^0.25.11",
    "mermaid": "^11.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
